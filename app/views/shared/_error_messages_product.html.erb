<% if @product.errors.any? %>
    <div id="error_explanation">
      <br />
      <% if @product.errors.count > 1 %>
          Formulario honek <%= @product.errors.count %> errore ditu.
      <% else %>
          Formulario honek errore bat du.
      <% end %>
      <ul>
        <br />
        <% @product.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        <br />
      </ul>
    </div>
<% end %>

